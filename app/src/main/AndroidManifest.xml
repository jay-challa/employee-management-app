<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.employeemanagement">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/thumbnail"
        android:label="@string/app_name"
        android:roundIcon="@drawable/thumbnail"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.EmployeeCreateActivity"/>
        <activity android:name=".activity.EmployeeDetailActivity" />
        <activity android:name=".activity.EmployeeListActivity" />
        <activity android:name=".activity.SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>